{
  "appId": "com.electron.app",
  "productName": "无人机引导仿真系统",
  "directories": {
    "output": "dist"
  },
  "icon": "images/icon.png",
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "shortcutName": "无人机引导仿真系统",
    "installerIcon": "images/icon.ico",
    "uninstallerIcon": "images/icon.ico"
  },
  "win": {
    "target": "nsis",
    "icon": "images/icon.ico"
  },
  "mac": {
    "icon": "images/icon.png",
    "category": "public.app-category.developer-tools"
  },
  "linux": {
    "target": ["snap"],
    "icon": "images/icon.png"
  },
  "files": [
    {
      "from": "build/main",
      "to": "main",
      "filter": ["**/*"]
    },
    {
      "from": "build/renderer",
      "to": "renderer",
      "filter": ["**/*"]
    },
    {
      "from": "src/main/static",
      "to": "static",
      "filter": ["**/*"]
    },
    {
      "from": "src/protobuf",
      "to": "main/src/protobuf",
      "filter": ["**/*"]
    },
    {
      "from": "images",
      "to": "images",
      "filter": ["**/*"]
    },
    {
      "from": "src/images",
      "to": "images",
      "filter": ["**/*"]
    },
    {
      "from": "build/config.env",
      "to": "config.env"
    },
    "!build",
    "!dist",
    "!scripts"
  ]
}
