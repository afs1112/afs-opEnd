{
  "name": "hnvs-mini-app",
  "version": "0.1.0",
  "description": "A Hvms mini app for creating and managing documents.",
  "main": "main/main.js",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "build": "node scripts/build.js && electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "build:win": "node scripts/build.js && electron-builder --win",
    "build:mac": "node scripts/build.js && electron-builder --mac",
    "build:linux": "node scripts/build.js && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "doc:create": "node scripts/create-doc.js",
    "doc:list": "ls -la docs/"
  },
  "author": {
    "name": "Huynh Quoc Bao",
    "url": "https://github.com/NinelXram"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@vitejs/plugin-vue": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "electron": "^28.0.0",
    "electron-builder": "^25.1.6",
    "postcss-apply": "^0.12.0",
    "postcss-scss": "^4.0.9",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "@tailwindcss/postcss": "^4.1.4",
    "better-sqlite3": "^11.9.1",
    "dotenv": "^16.6.1",
    "element-plus": "^2.9.7",
    "postcss": "^8.5.3",
    "protobufjs": "^7.5.3",
    "tailwindcss": "^4.1.4",
    "vue": "^3.3.8"
  }
}
